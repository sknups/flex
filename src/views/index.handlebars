<div class="index-page">
    <div class="logo"><img src="/static/backgrounds/SKNUPS_BOX.png" width="500px"></div>

    <div class="main_div">
        <p class="text-h3">Enter Your Certificate Id below to Flex</p>

        <form onsubmit="return process()">
            <input type="text" name="id" id="id" required>
            <input type="submit" value="Flex!">
        </form>
    </div>
</div>

<script type="text/javascript">
    function process() {
        const certificateId = document.getElementById("id").value;
        const url = `${window.location}{{certificateHostPath}}/${certificateId}/flex.html`;

        gtag('event', 'search_certificate', {
            'for': certificateId,
        });

        location.href = url;

        // Prevent regular form behaviour
        return false;
    }

</script>
