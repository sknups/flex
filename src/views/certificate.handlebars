<style>
    .wrapper {
        display: flex !important;
        flex-flow: column;

        align-items: center;
        justify-content: center;
        justify-items: center;
    }

    .opacity-0 {
        opacity: 0;
    }

    .visible {
        opacity: 1;
    }

    .certificate {
        word-wrap: anywhere;
    }

    .toast-success {
        background: #267e26;
        color: white;
        width: 100%;
        border-radius: 10px;
        text-align: center;
    }

    .fade-out {
        transition: opacity 0.5s ease-out;
        -moz-transition: opacity 0.5s ease-out;
        -webkit-transition: opacity 0.5s ease-out;
    }
</style>

<script>
    gtag('event', 'show_certificate', {
        'brand': "{{data.brandCode}}",
        'id': "{{data.thumbprint}}",
        'sku': "{{data.stockKeepingUnitCode}}",
        'game': "{{data.platformCode}}"
    });

    function didLoadImage() {
        const imageElement = document.querySelector('.img');
        const toastElement = document.querySelector('.toast-success');

        imageElement.classList.remove('hidden');
        imageElement.classList.add('visible');

        setTimeout(function () {
            toastElement.classList.remove('visible');
            toastElement.classList.add('opacity-0');
        }, 5000);
    }

</script>


<div class="wrapper" style="padding: 10px">
    <div class="toast-success fade-out {{showToast}}">
        <span>{{toast}}</span>
    </div>
    <div class="empty">
        <div class="img opacity-0">
            <img src="/img/cert/{{data.thumbprint}}"
                 style="max-width: {{width}}px; width: 100%; height: auto;"
                 alt="{{data.stockKeepingUnitName}}"
                 onload="didLoadImage()"
            />
        </div>
    </div>
</div>
