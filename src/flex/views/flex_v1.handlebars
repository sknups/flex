<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title> {{title}} </title>
    <link rel="shortcut icon" type="image/jpg" href="/static/favicon.ico"/>
    <meta name="title" content="{{name}}" />
    <meta property="og:title" content="{{name}}" />
    <meta property="og:site_name" content="SKNUPS" />
    <meta property="og:description" content="{{description}}" />
    <meta property="og:image" content="{{ogImageUrl}}" />
    <meta property="og:url" content="{{ogUrl}}" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_GB" />
    <meta name="theme-color" content="#01D6A6" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content="{{twitterImageUrl}}" />
    <meta name="twitter:url" content="{{twitterUrl}}" />
    <meta name="twitter:text:title" content="{{name}}" />
    <meta name="twitter:site" content="@sknupsgg" />
    <meta name="twitter:title" content="{{name}}" />
    <meta property="snap:sticker" content="{{snapStickerImageUrl}}" />
    {{#if gaEnabled }}
    <script async src="https://www.googletagmanager.com/gtag/js?id={{gaMeasurementId}}"></script>
    <script>
         window.dataLayer = window.dataLayer || [];
         function gtag(){dataLayer.push(arguments);}
         gtag('js', new Date());
         gtag('config', '{{gaMeasurementId}}');
         {{#if gaLegacyEnabled }}
         gtag('config', '{{gaLegacyMeasurementId}}');
         {{/if}}
         gtag('event', 'flx_view', {
            'event_label': 'Asset has been viewed',
            'event_category': 'flx',
            'asset': '{{ token }}',
            'sku': '{{ sku }}',
            'brand': '{{ brand }}',
            'claim': '{{ giveaway }}'
         });
    </script>
    {{/if}}
    {{#if optimizeEnabled }}
    <script src="https://www.googleoptimize.com/optimize.js?id={{optimizeId}}"></script>
    {{/if}}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <style>
    html{
      background-color: black;
    }

    body {
      background: rgb(4, 139, 108);
      background: -webkit-gradient(linear, left bottom, left top, from(rgba(4, 139, 108, 1)), color-stop(50%, rgba(3, 59, 46, 1)), to(rgba(4, 4, 4, 1)));
      background: -o-linear-gradient(bottom, rgba(4, 139, 108, 1) 0%, rgba(3, 59, 46, 1) 50%, rgba(4, 4, 4, 1) 100%);
      background: linear-gradient(0deg, rgba(4, 139, 108, 1) 0%, rgba(3, 59, 46, 1) 50%, rgba(4, 4, 4, 1) 100%);
    }

    .viewbox {
      -webkit-perspective: 800px;
      perspective: 800px;
    }

    .viewbox.active .front {
      -webkit-transform: rotateY(-180deg);
      transform: rotateY(-180deg);
    }

    .viewbox.active .back {
      -webkit-transform: rotateY(0deg);
      transform: rotateY(0deg);
    }

    .viewbox .back {
      -webkit-transform: rotateY(180deg);
      transform: rotateY(180deg);
    }

    .cards {
      margin: 0;
      -webkit-transform-style: preserve-3d;
      transform-style: preserve-3d;
    }

    .skn-card {
      width: 100%;
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
      -webkit-transition: -webkit-transform 0.6s;
      transition: -webkit-transform 0.6s;
      -o-transition: transform 0.6s;
      transition: transform 0.6s;
      transition: transform 0.6s, -webkit-transform 0.6s;
    }

    .front {
      position: absolute;
      top: 0;
      left: 0;
    }

    .img-small {
      -webkit-filter: blur(30px);
      filter: blur(30px);
      /* this is needed so Safari keeps sharp edges */
      -webkit-transform: scale(1);
      -ms-transform: scale(1);
      transform: scale(1);
    }

    .main-footer {
      color: #fff;
      font-size: 14px;
    }

    a,
    a:hover,
    a:visited {
      color: rgb(1, 214, 166);
    }
  </style>
</head>

<body>
  <div class="d-flex flex-column">
    <div class="flex-shrink-0">
      <div class="container text-center">
        <div class="row justify-content-center">
          <div class="col-10 col-sm-8 col-md-6 col-lg-6 col-xl-6">
            <a href="{{appURL}}" target="_blank">
              <img src="/static/sknups_logo_v1.jpg" class="logo mx-auto d-block pt-3" />
            </a>

            <div class="viewbox pb-3 pt-5">
              <figure class="cards">
                <img class="skn-card front mx-auto img-fluid img-small" data-large="{{cardImgUrl}}"
                  src="{{cardThumbnailImgUrl}}" />
                <img class="skn-card back mx-auto img-fluid" src="{{backImgUrl}}" />
              </figure>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="mt-auto py-3 main-footer">
      <div class="container text-center">
        <small>&copy;
          {{copyrightYear}}
          Upskins Ltd -
          <a href="{{legalUrl}}" target="_blank">T&amp;C</a></small>
      </div>
    </footer>
  </div>
  <script>
    window.onload = function () {
      var viewbox = document.querySelector('.viewbox')
      viewbox.addEventListener('click', function () {
        viewbox.classList.toggle('active');
      })


      var imageSmall = document.querySelector('.img-small')
      var imgLarge = new Image();
      imgLarge.src = imageSmall.dataset.large;
      imgLarge.classList.add('skn-card', 'front', 'mx-auto', 'img-fluid');

      var cards = document.querySelector('.cards')
      imgLarge.onload = function () {
        cards.removeChild(imageSmall);
        cards.appendChild(imgLarge);
      };

    }
  </script>
</body>

</html>
