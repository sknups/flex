<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />    
    <title> {{title}} </title>
    <link rel="shortcut icon" type="image/jpg" href="/static/favicon.ico"/>
    <meta name="title" content="{{stockKeepingUnitName}}" />
    <meta name="og:title" content="{{stockKeepingUnitName}}" />
    <meta name="og:description" content="{{description}}" />
    <meta name="og:image" content="{{ogImageUrl}}" />
    <meta name="og:url" content="{{ogUrl}}" />
    <meta name="og:type" content="website" />
    <meta name="og:locale" content="en_GB" />
    <meta name="theme-color" content="#01D6A6" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:image" content="{{twitterImageUrl}}" />
    <meta name="twitter:url" content="{{twitterUrl}}" />
    <meta name="twitter:text:title" content="{{stockKeepingUnitName}}" />
    <meta name="twitter:site" content="@sknupsgg" />
    <meta name="twitter:title" content="{{stockKeepingUnitName}}" />
    {{#if gaEnabled }}      
    <script async src="https://www.googletagmanager.com/gtag/js?id={{gaMeasurementId}}"></script>
    <script>
         window.dataLayer = window.dataLayer || [];
         function gtag(){dataLayer.push(arguments);}
         gtag('js', new Date());
         gtag('config', '{{gaMeasurementId}}');
         gtag('event', 'flx_view', {'send_to': '{{gaMeasurementId}}',            
            'event_label': 'Asset has been viewed',
            'event_category': 'flx',
            'asset': '{{ thumbprint }}',
            'sku': '{{ stockKeepingUnitCode }}',
            'brand': '{{ brandCode }}',
            'claim': '{{ claimCode}}'
         });      
    </script>
    {{/if}}
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <style>
    body{ 
      background: rgb(4,139,108);
      background: linear-gradient(0deg, rgba(4,139,108,1) 0%, rgba(3,59,46,1) 50%, rgba(4,4,4,1) 100%);      
    }  
            
    .flip-wrapper.active * .back {
        -webkit-transform: rotateY(0deg);
        -moz-transform: rotateY(0deg);
        -o-transform: rotateY(0deg);
        -ms-transform: rotateY(0deg);
        transform: rotateY(180deg);
    }

    .flip-wrapper.active .flip-content .front {
        display: none!important;
    }

    .flip-wrapper.active .flip-content .back {
        display: block!important;
    }



    .front,
    .back {
        -webkit-backface-visibility: hidden;
        -moz-backface-visibility: hidden;
        backface-visibility: hidden;   
        width:100%;
        transition: opacity 0.5s linear;
            transform-style: preserve-3d;
        -webkit-transform-style: preserve-3d;  
    }


    /* front pane, placed above back */
    .front {
        
    }

    /* back, initially hidden pane */
    .back {
        -webkit-transform: rotateY(-180deg);
        -moz-transform: rotateY(-180deg);
        -o-transform: rotateY(-180deg);
        transform: rotateY(-180deg);
        display: none!important;
    }

    .img-small {
      filter: blur(30px);
      /* this is needed so Safari keeps sharp edges */
      transform: scale(1);
    }

    .main-footer{
      color: #fff;    
      font-size: 14px;
    }

    a { 
      color: rgb(1, 214, 166);
    }

    </style>
  </head>    
  <body class="d-flex flex-column ">      
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-10 col-sm-8 col-md-6 col-lg-6 col-xl-6">
          <a href="{{appURL}}" target="_blank">
            <img
              src="/static/sknups_logo_v1.jpg"
              class="logo mx-auto d-block pt-3"
            />
          </a>

          <div class="flip-wrapper pt-5">
            <div class="flip-content pb-3">
              <div class="img-wrapper" data-large="{{cardImgUrl}}">
                <img
                  src="{{cardThumbnailImgUrl}}"
                  class="front mx-auto d-block img-fluid img-small"
                />
              </div>            
              <img
                src="{{backImgUrl}}"
                class="back mx-auto img-fluid"
              />            
            </div>
          </div>        
      </div>
    </div>
  </div>

  <footer class="flex-shrink-0 py-4 main-footer">
    <div class="container text-center">
      <small>&copy;
        {{copyrightYear}}
        Upskins Ltd -
        <a href="{{legalUrl}}" target="_blank">T&amp;C</a></small>
    </div>
  </footer>
</body>
    <script>
      window.onload = function() {
        var flipWrapper = document.querySelector('.flip-wrapper')   
        flipWrapper.addEventListener('click', function() {              
          flipWrapper.classList.toggle('active');       
        })
     

        var imgWrapper = document.querySelector('.img-wrapper')   
        var imageSmall = document.querySelector('.img-small') 
        var imgLarge = new Image();
        imgLarge.src = imgWrapper.dataset.large; 
        imgLarge.classList.add('front','mx-auto','d-block','img-fluid','img-full');          
       
        imgLarge.onload = function () {
          imgWrapper.removeChild(imageSmall);    
          imgWrapper.appendChild(imgLarge);
        }; 
      
      }
    </script>
  </body>

</html>
