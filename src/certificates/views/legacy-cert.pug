html(lang="en")

    head
        link(rel='stylesheet', href='/assets/css/main.css')
        link(rel='stylesheet', type='text/css', href='https://cdn.rawgit.com/vaakash/socializer/80391a50/css/socializer.min.css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

        meta(property='title', content="SKNUPS")
        meta(property='og:title', content= data.handle + ' ' + data.skuname)
        meta(property='og:description', content= data.description)
        meta(property='og:image', content=  host + '/id/' + data.id + '/img/og/cert.png')
        meta(property='og:url', content= host + '/id/' + data.id + '/img/no/cert.html')
        meta(property='og:type', content='website')
        //Twitter will fall back to the og title, etc
        meta(name='twitter:card', content='summary_large_image')
        meta(name='twitter:image', content= host + '/id/' + data.id + '/img/twitter/cert.png')
        style.
            div.wrapper {
                min-height: 100%;
                display: grid;
                grid-template-rows: 1fr auto;
            }
            div.empty {
                display: flex;
                justify-content: center;
                margin-top: 100px;
            }
            div.cert {
                position: absolute;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0
                rgba(0, 0, 0, 0.19);
                width: #{width};
                height: #{height};
                margin: auto;
                text-align: center;
                font-family: 'OCR A';
                overflow-wrap: break-word;
                word-wrap: break-word;
            }
            div.txt {
                margin: auto;
                width: 80%;
            }
            div.img {
                position: absolute;
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0
                rgba(0, 0, 0, 0.19);
                width: #{width};
                height: #{height};
                margin-top: 1;
                margin-left: auto;
                margin-right: auto;
            }

    body
        .wrapper
            .empty
                .cert
                    .txt
                        p #{data.x509}
                .img
                    img(src='/img/' + data.id + '/img/default/cert.png', width= width, height= height)
