<div class="toast-success fade-out {{showToast}}">
    <span>{{toast}}</span>
</div>
<div class="container mt-5 d-flex justify-content-center">
    <div class="main_div p-5 col-xl-8 col-12 bg-skn-dark">
        <div class="row pb-2">
            <img class="mx-auto d-block" src="/static/assets/boxed-800x800.png"
                 style="width:60%;height:70%; margin:4rem">
        </div>
        <div class="row">
            <div class="col">
                <div class="col-md-12 mt-3 text-center">
                    <button id="flexBtn" type="submit" class="btn btn-skn btn-lg" onclick="unbox()">Open it now</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function unbox() {
        window.location.href = '/unboxed?certCode={{certCode}}&email={{email}}';
    }
</script>
