<!-- Compiled and minified CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<style>
    .column {
        display: flex;
        flex-flow: column;
    }

    nav {
        background-color: transparent;
        color: #000000;
        border: 0;
        margin: 0;
        padding: 0;
        box-shadow: none;
    }

    nav a {
        color: #000000;
    }

    .card-action {
        display: flex;

        justify-content: end;
    }
</style>

<div class="container">

    <div class="valign-wrapper">
        <div class="row w-100">
            <div class="col s12">
                <h3 class="header">Claim Skin</h3>
                <div class="card card-panel hoverable horizontal">
                    <div class="card-stacked">
                        <form>
                            <div class="card-content">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="code" type="text" class="validate" placeholder="XXXX-XXXX-XXXX-XXX-XXX" required>
                                        <label for="code">Code</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="email" type="email" class="validate" placeholder="some@email.com" required>
                                        <label for="email">Email</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input id="tag" type="text" class="validate" placeholder="Xx_UserOver9000_xX" required>
                                        <label for="tag">Display Name</label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-action">

                                <button class="btn waves-effect waves-light" type="submit" name="action">
                                    Claim
                                    <i class="material-icons right">send</i>
                                </button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
