<style>
    .toast-error {
        background: #ee6e73;
        color: white;
        width: 100%;
        border-radius: 10px;
        text-align: center;
    }

    .fade-out {
        opacity: 1;
        transition: opacity 0.5s ease-out;
        -moz-transition: opacity 0.5s ease-out;
        -webkit-transition: opacity 0.5s ease-out;
    }

    .no-opacity {
        opacity: 0;
    }
</style>

<script>
    function hideToast() {
        const toastElement = document.querySelector('.toast-error');
        setTimeout(function () {
            toastElement.classList.add('no-opacity');
        }, 5000);
    }
</script>

<div class="wrapper" style="padding: 10px">
    <div class="toast-error fade-out">
        <span>{{toast}}</span>
    </div>
    <div class="empty">
        <div class="img">
            <img onload="hideToast()" src="/static/backgrounds/SKNUPS_error_cert.png" alt="Invalid Certificate" />
        </div>
    </div>
</div>